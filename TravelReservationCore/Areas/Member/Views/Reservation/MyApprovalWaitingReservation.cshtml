@using TravelReservationEntity.Concrete
@model List<Reservation>
@{
    ViewData["Title"] = "MyApprovalWaitingReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@{ int i = 1;}
<h1>Onay Bekleyen Rezervasyonlarım</h1>
@if (!Model.Any())
{
    <h2>Onay Bekleyen Rezervasyonunuz Bulunmamaktadır</h2>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Lokasyon</th>
            <th>Kişi Sayısı</th>
            <th>Rezervasyon Tarihi</th>
            <th>Durum</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>@item.Destination.City</td>
                <td>@item.PersonCount</td>
                <td>@item.ReservationDate</td>
                <td>@item.Status</td>
            </tr>
            i++;
        }
    </table>
}

